source 'https://rubygems.org'

ruby '3.2.3'

# Rails API framework
 gem 'rails', '~> 7.0.8'

# Packwerk for modularization
 gem 'packwerk'

# Authentication
 gem 'devise'
 gem 'devise-jwt'

# Testing framework
 gem 'rspec-rails'

# JSON serialization
 gem 'fast_jsonapi'

# Background jobs
 gem 'sidekiq'

# Linting
 gem 'rubocop'

# Environment variables
 gem 'dotenv-rails', groups: [:development, :test]
